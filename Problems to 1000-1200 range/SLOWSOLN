#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int maxT,maxN,sumN,n,r;
	    cin>>maxT>>maxN>>sumN;
	    n=sumN/maxN;
	    r=sumN%maxN;
	    if(maxT>n)
	      cout<<n*maxN*maxN+r*r<<endl;
	    else
	      cout<<maxT*maxN*maxN<<endl;
	}
	return 0;
}
