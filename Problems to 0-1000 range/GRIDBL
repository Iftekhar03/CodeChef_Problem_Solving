#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int a,b;
	    cin>>a>>b;
	    if(a%2==0 && b%2==0){
	        cout<<0<<endl;
	    }
	    else if(a%2==0 && b%2==1){
	        cout<<a<<endl;
	    }
	    else if(a%2==1 && b%2==0){
	        cout<<b<<endl;
	    }
	    else{
	        cout<<(a+b)-1<<endl;
	    }
	}
	return 0;
}
