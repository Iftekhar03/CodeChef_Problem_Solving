  #include<bits/stdc++.h>
  using namespace std;

  int main(){
     int t;
      cin>>t;
      while(t--)
      {
       int n,x,count=0;
       cin>>n>>x;
       long long int a[n];
       for(int i=0;i<n;i++)
        {
          cin>>a[i];
          if(a[i]<x)
          {
            count=i+1;
          }
        }
        cout<<count<<endl;
      
      }
        
        return 0;
}
